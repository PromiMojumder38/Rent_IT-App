<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@color/white"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="20dp">


        <ImageView
            android:id="@+id/user_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/sale"
            android:scaleType="centerCrop"
            app:riv_corner_radius="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans"
                android:drawableLeft="@drawable/ic_baseline_local_grocery_store_24"
                android:drawablePadding="10dp"
                android:paddingTop="15dp"
                android:drawableTint="@color/black"
                android:text="Popular Products"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/user_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="68dp"
                android:drawableLeft="@drawable/ic_baseline_payments_24"
                android:drawableTint="@color/black"
                android:fontFamily="@font/opensans"
                android:gravity="end"
                android:text="Paid"
                android:textColor="#00000f"
                android:textSize="18sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/user_des"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:paddingTop="10dp"
            android:maxLines="1"
            android:singleLine="true"

            android:drawableLeft="@drawable/ic_baseline_info_241"
            android:drawablePadding="10dp"
            android:text="Description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_margin="-5dp"

                android:src="@drawable/rating" />

            <TextView
                android:id="@+id/user_rating"
                android:layout_width="103dp"
                android:layout_height="19dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans"
                android:textSize="14dp"
                android:paddingLeft="2dp"
                android:text="5.0"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/user_price_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans"
                android:gravity="end"
                android:drawableLeft="@drawable/ic_baseline_monetization_on_241"
                android:drawablePadding="0dp"
                android:text="Rent Time : 7 day"
                android:textColor="@color/black" />


        </LinearLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>